<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F2F"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/And03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Hello AND03"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/And03"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome to Layout"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circle"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@id/Welcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="166dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="167dp"

        android:background="@drawable/circle" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:drawableEnd="@drawable/vector112"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="Name:Saket Saurabh"
        android:textColor="#ff0000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Age:22"
        android:textColor="#ff0000"
        android:textSize="24dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       android:background="#00FF00"
        android:padding="20dp"
        android:text="Next"

        />

    <View
        android:id="@+id/three"
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:layout_above="@+id/next"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:background="#C4C4C4"
        android:layout_marginBottom="20sp"



        />

    <View
        android:id="@+id/two"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_above="@+id/three"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:background="#C4C4C4"
        android:layout_marginBottom="20sp"



        />

    <View
        android:id="@+id/one"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_above="@+id/two"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="#C4C4C4"
        android:layout_marginBottom="20sp"



        />


</RelativeLayout>